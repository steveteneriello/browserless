# Environment Configuration
NODE_ENV=production
PORT=3000

# Browser Configuration (Railway Optimized)
BROWSER_TIMEOUT=45000
MAX_CONCURRENT_SESSIONS=1
BROWSER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage,--disable-gpu

# Redis Configuration (for Railway Redis addon)
REDIS_URL=redis://localhost:6379

# Queue Configuration  
QUEUE_CONCURRENCY=2
QUEUE_MAX_JOBS=50

# Rate Limiting (Railway Optimized)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=30

# Security
TOKEN=bananalemon

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=3001

# Logging
LOG_LEVEL=info

# Health Check
HEALTH_CHECK_INTERVAL=30000
